<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="snappyAPP.Views.Intro.View2">

    <Grid BackgroundColor="White"
          RowDefinitions="100,400,auto">
        
        <Frame CornerRadius="40"
               Padding="0"
               VerticalOptions="StartAndExpand"
               Margin="20"
               HeightRequest="400"
               Grid.Row="1">
            <Image Source="https://i.ibb.co/jZHTbmD/View2.jpg"
                   Aspect="AspectFill"/>
        </Frame>

        <Label Text="Con Snappy consigue el trabajo que deseas mucho más rápido"
               TextColor="Black"
               HorizontalTextAlignment="Center"
               VerticalOptions="End"
               FontSize="Title"
               Grid.Row="2"
               Margin="20"/>
    </Grid>

</ContentView>